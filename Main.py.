import http.server
import socketserver
import threading
import time

# Puerto para Render
PORT = 8080

def keep_alive():
    Handler = http.server.SimpleHTTPRequestHandler
    with socketserver.TCPServer(("", PORT), Handler) as httpd:
        httpd.serve_forever()

def principal():
    print("INGENIERÍA DEL CAMBIO - SISTEMA ACTIVO")
    while True:
        # Aquí puedes poner tu lógica o dejarlo así para que esté siempre encendido
        time.sleep(10) 

if __name__ == "__main__":
    # Inicia servidor web para Render
    threading.Thread(target=keep_alive, daemon=True).start()
    # Inicia tu programa
    principal()
