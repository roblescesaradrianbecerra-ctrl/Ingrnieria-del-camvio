import os
from flask import Flask, jsonify

app = Flask(__name__)

CONFIG = {
    "MARCA": "CÃ©sar Becerra vuelve a creer en ti",
    "LIBRO_DE_VALOR": 147.00,
    "LINK_MERCADO_PAGO": "https://mpago.li/1gTiqKF"
}

@app.route('/')
def inicio():
    return f"Sistema de {CONFIG['MARCA']} Activo"

@app.route('/vendedor')
def vender():
    return jsonify({"pago": CONFIG['LINK_MERCADO_PAGO']})

if __name__ == "__main__":
    port = int(os.environ.get("PORT", 5000))
    app.run(host='0.0.0.0', port=port)
